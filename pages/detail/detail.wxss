/* pages/detail/detail.wxss */
.wrap {
  width: 100%;
  height: auto;

}

.header {
  width: 100%;
  padding: 40rpx 10rpx;
}

.tabs,
.is_author {
  background-color: #80bd01;
  color: white;
  padding: 4rpx 8rpx;
  font-size: 24rpx;
  border-radius: 5rpx;

}

.title {
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.tips {
  font-size: 24rpx;
  color: #838383;
  margin-top: 20rpx;
}

.content {
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  font-size: 26rpx;
  border-top: 1rpx solid #e5e5e5;
}

.reply {
  width: 100%;
  padding-top: 20rpx;
  height: auto;
  border-top: 1rpx solid #e5e5e5;
}

.reply_list {
  width: 100%;
  height: auto;
  padding: 10rpx 5rpx;
  border-top: 1rpx solid #f0f0f0;
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  margin: 0 10rpx;
  vertical-align: middle;
}

.reply_list text {
  margin-right: 10rpx;
}
.nav{
  display:inline-block;
}