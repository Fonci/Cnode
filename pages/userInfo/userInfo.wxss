/* pages/userInfo/userInfo.wxss */
.content {
  width: 100%;
  height: auto;
  padding: 10rpx;
}

.author_info {
  width: 100%;
  height: auto;
  padding: 20rpx;
}

.avatar {
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
  margin: 0 15rpx;
  border-radius: 5rpx;
}

.loginname {
  color: #778087;
  font-size: 24rpx;
}

.info {
  color: #778087;
  font-size: 26rpx;
  text-align: left;
  display: inline-block;
  width: 100%;
}

.topic {
  color: #444;
  font-size: 26rpx;
  padding: 20rpx 10rpx;
  background-color: #f6f6f6;
}

.litle_avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 5rpx;
  vertical-align: middle;
  margin: 0 20rpx;
}

.topic_title {
  width: 70%;
  font-size: 26rpx;
  color: #08c;
  text-align: left;
}

.created_topic,
.join_topic {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f6f6f6;
}

.look_more {
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #444;
  padding-left: 30rpx;
}

.no_topic {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  color: #444;
  font-size: 26rpx;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #f6f6f6;
}